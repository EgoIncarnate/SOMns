{
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "echoCommand": true,
  "suppressTaskName": true,
  "options": {
    "cwd": "${workspaceRoot}"
  },
  "tasks": [
    {
      "taskName": "continuous compilation",
      "isBackground": true,
      "args": ["run", "watch"],
      "problemMatcher": "$tsc-watch"
    },
    {
      "taskName": "test",
      "isBackground": false,
      "args": []
    },
    {
      "taskName": "format",
      "isBackground": false,
      "args": ["run", "format"]
    }
  ]
}

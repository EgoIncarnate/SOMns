Delay = (
    | durationInMilliseconds |
    
    duration        = ( ^ durationInMilliseconds )
    duration: anInt = ( durationInMilliseconds := anInt )
    
    wait = primitive

    ----
    
    forSeconds: anInt = (
        ^ self forMilliseconds: anInt * 1000
    )
    
    forMilliseconds: anInt = (
        ^ self new duration: anInt
    )
)
